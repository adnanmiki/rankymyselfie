{% extends 'base.html.twig' %}

{% block body %}
{% set hasImages=0 %}

<h2 class="page-header">Edit profile...</h2>
<ul class="nav nav-pills">
	<li class="active"><a href="#1a" data-toggle="tab">Edit
			Profile</a></li>
	<li><a href="#2a" data-toggle="tab">Images</a></li>

</ul>

<div class="tab-content clearfix">
	<div class="tab-pane active" id="1a">
		{{form_start(form)}}
		{{form_widget(form)}}
		{{form_end(form)}}
	</div>
	<div class="tab-pane" id="2a">
		<div class="wrapper">
			<div class="container">
				<div class="panel panel-default">
					<div class="panel-body">

						<!-- Standar Form -->
						<form action="http://localhost/rankmyselfie/web/app_dev.php/uploadimage/{{ user.id }}" method="post"
							enctype="multipart/form-data" id="js-upload-form">
							<div class="form-inline">
								<div class="form-group">
									<input type="file" name="img" id="js-upload-files" multiple>
								</div>
								<button type="submit" class="btn btn-sm btn-primary"
									id="js-upload-submit">Upload Images</button>
							</div>
						</form>

						<!-- Drop Zone -->
						<div class="upload-drop-zone" id="drop-zone"
							style="display: none;">Just drag and drop files here</div>

						<!-- Progress Bar -->
						<div class="progress" style="display: none;">
							<div class="progress-bar" role="progressbar" aria-valuenow="60"
								aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
								<span class="sr-only">60% Complete</span>
							</div>
						</div>
						<br>
					</div>
					<br>
				</div>

				<div class="row">
					{% for image in images %}
					{% set hasImages= 1 %}
					<div class="col-sm-3">
						<div
							style="padding: 10px 10px 10px 10px; width: 221px; height: 420px;"
							class="card">
							<img style="height: 150px; width: 200px;" class="card-img-top"
								src="http://localhost/rankmyselfie/web/bundles/uploads/{{ image.urlfolder }}"
								alt="Card image cap">
							<div class="card-block" style="margin-top: 10px;">
								<div class="form-group" id="picsettings-form"  >
									<label for="pwd">Pictitle</label> <input type=text
										class="form-control" id="pictitel{{ image.id }}" value="{{ image.pictitel }}">
									<label for="comment">About the pic</label>
									<textarea class="form-control" rows="5" id="picdesc{{ image.id }}">{{ image.picdesc }}</textarea>

									<a href="http://localhost/rankmyselfie/web/app_dev.php/deleteimage/{{ user.id }}/{{ image.id }}"><span
										style="margin-top: 10px;" class="glyphicon glyphicon-trash"></span></a>


									<a  onclick="test({{ image.id }})" id="saveimage" > <span
										style="margin-top: 10px;"
										class="glyphicon glyphicon-floppy-disk"></span></a>
										
								</div>
							</div>
						</div>
					</div>
					{% endfor %}



				</div>
			</div>
		</div>
		<!-- /container -->
	</div>

</div>
</div>

</div>



